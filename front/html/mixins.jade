mixin feature(fname, tId)
    .row
        .col-xs-12
            .page-header
                != "<h1" + ( block ? " ng-click=\"show('" + fname + "',true)\")>" : ">")
                if block
                    small
                        span.glyphicon.glyphicon-chevron-down.collapse-indicator(
                        ng-class="!show('#{fname}') ? [] : ['collapse-indicator-rotate']"
                        )
                | &nbsp;
                ="{{'"+tId+"' | translate}}"
                //small= ' ' + version
    if block
        div(collapse="show('#{fname}')")
            block
mixin info(title)
    .col-xs-6.col-sm-4.col-md-3: .panel.panel-info
        .panel-heading: h2.panel-title #{title}
        .panel-body
            if block
                block

mixin wordList(type, origin)
        div.col-xs-6
            .panel.panel-info
                .panel-heading {{ 'SEC_STATS_TITLE#{type=="only" ? "ONLY" : "BOTH"}' | translate : {corpus : statistic.resultLists["#{origin}"].displayName} }}
                .panel-body
                    table.table.table-bordered.table-striped(st-table="statistic.safe['#{type+origin.charAt(0).toUpperCase()+origin.slice(1)}']", st-safe-src="statistic.resultLists['#{type+origin.charAt(0).toUpperCase()+origin.slice(1)}']")
                        thead
                            tr
                                th.col-xs-6(st-sort="word") {{ 'SEC_STATS_WORD' | translate }}
                                th.col-xs-6(st-sort="pos") {{ 'SEC_STATS_POS' | translate }}
                                th.col-xs-3(st-sort!="#{(type == 'more' ? origin + 'Record.' : '') + 'absFreq' + (type == 'more' ? origin + '' : '\", st-sort-default=\'reverse\'')}")
                                    | {{ 'SEC_STATS_COUNTINX' | translate : {x: statistic.resultLists["#{origin == "source" ? "source" : "target"}"].displayName} }}
                                if type == "more"
                                    th.col-xs-3(st-sort="#{origin == 'source' ? 'target' : 'source'}Record.absFreq") {{ 'SEC_STATS_COUNTINX' | translate : {x: statistic.resultLists["#{origin == "target" ? "source" : "target"}"].displayName} }}
                                if type == "more"
                                    th.col-xs-3(st-sort="#{origin == 'source' ? '' : '-'}logRelativeRatio", st-sort-default="reverse") {{ 'SEC_STATS_RATIO' | translate }}
                            tr
                                th(colspan="#{type == 'more' ? '5' : '3'}"): input.input-sm.form-control(st-search="word", placeholder="Search word...", type="search")
                                th(ng-show="false"): input.input-sm.form-control.st-global-search(st-search="pos", type="search")
                        tbody
                            tr(ng-repeat="word in statistic.safe['#{type+origin.charAt(0).toUpperCase()+origin.slice(1)}']")
                                td {{word.word}}
                                td {{'SEC_STATS_POS_' + word.pos | translate}}
                                td {{word.#{type == 'more' ? origin + 'Record.' : ''}absFreq}}
                                if type == "more"
                                    td {{word.#{origin == "source" ? "target" : "source"}Record.absFreq}}
                                if type == "more"
                                    td {{word.#{origin}Record.relFreq / word.#{origin == "source" ? "target" : "source"}Record.relFreq | number: 2}}
                                .row
                        tfoot
                            tr
                                td.text-center(colspan="#{type == 'more' ? '5' : '3'}")
                                    div(st-pagination="", st-items-by-page="parseFloat(paginationSize)", st-template="template/smart-table/pagination2.html")